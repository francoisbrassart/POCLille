<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".controller.fragments.RoubaixRandomFragment"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="627dp">

        <ImageView
            android:id="@+id/FragmentRoubaixRandomImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="img"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />

        <ProgressBar
            android:id="@+id/FragmentRoubaixRandomProgressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/FragmentRoubaixRandomButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/refresh_small"
            android:drawableLeft="@drawable/refresh_small"
            android:drawablePadding="5dp"
            android:padding="20dp"
            android:text="Random" />

    </FrameLayout>


</FrameLayout>